  import react from '@vitejs/plugin-react'

  export default defineConfig({
    plugins: [react()],
    resolve: {
      alias: {
        '@': '/src'
      }
    }
  })
""")
with open(os.path.join(root, "vite.config.js"), "w") as f:
    f.write(vite_config)

